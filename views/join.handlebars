<form class="signup-form">
    <div>
        <label for="username-signup">PasswordExchange username:</label>
        <input type="text" id="username-signup" />
    </div>
    <div>
        <label for="email-signup">PasswordExchange email:</label>
        <input type="text" id="email-signup" />
    </div>
    <div>
        <label for="password-signup">PasswordExchange password:</label>
        <input type="password" id="password-signup" />
    </div>
    <div>
        <label for="site-offered">What site are you offering?</label>
        <select name="site-offered" id="site-offered">
            <option value="hulu">Hulu</option>
            <option value="netflix">Netflix</option>
            <option value="disney+">Disney+</option>
            <option value="crunchyroll">CrunchyRoll</option>
        </select>
    </div>
    <div>
        <label for="site-username">What's your username for this site?</label>
        <input type="text" id="site-username" />
    </div>
    <div>
        <label for="site-password">What's your password for this site?</label>
        <input type="text" id="site-password" />
    </div>
    <div>
        <label for="site-wanted">Finally, what site do you want to swap for?</label>
        <select name="site-offered" id="site-wanted">
            <option value="Hulu">Hulu</option>
            <option value="Netflix">Netflix</option>
            <option value="Disney+">Disney+</option>
            <option value="CrunchyRoll">CrunchyRoll</option>
        </select>
    </div>
    <div class="near-center">
        <button class="gateway-btn" type="submit">Swap!</button>
    </div>
</form>
<script src="/javascript/join.js"></script>